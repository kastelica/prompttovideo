SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/prompttovideo
DEV_DATABASE_URL=postgresql://postgres:password@localhost:5432/prompttovideo_dev
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/prompttovideo_test

# Redis Configuration
